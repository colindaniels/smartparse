{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "smartparse": ["packages/smartparse/src"]
    }
  },
  "include": ["packages/*/src"]
}